<!DOCTYPE html>
<html>
  <head>
    <title>Menutable</title>
    <meta name="viewport" content="widtr=device-widtr,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" 
  </head>
  <body>
    <header>
      <div class="title_logo">menutable</div>
        <% if session[:user_id] %>
          <div class="user_information">
            <table>
              <tr>
                <td><i class="far fa-user-circle"></i><%= link_to(@current_user.login_id,"/users/#{@current_user.id}",class:'account_link') %></td>
                <td><i class="fas fa-sign-out-alt"></i><%= link_to('Logout','/logout',  class:'account_link', method: :post, data: { confirm: "ログアウトしてよろしいですか?" })%></td>
              </tr>
            </table>
          </div>
          <br>
          <div class="menu_list">
            <table>
              <tr>
                <td><i class="fas fa-home"></i><%= link_to("Our Services",'/users/top',class:'header_link') %></td>
                <td><i class="fas fa-book"></i><%= link_to("recipe",'/recipes/index',class:'header_link') %></td>
                <td><i class="far fa-calendar-alt"></i><%= link_to("meal",'/meal/index',class:'header_link') %></td>
                <td><i class="far fa-list-alt"></i><%= link_to("shopping",'/shopping/index',class:'header_link') %></td>
                <td><i class="fas fa-shopping-cart"></i><%= link_to("store",'https://www.iy-net.jp/',target: :_blank, rel: "noopener noreferrer",class:'header_link') %></td>
              </tr>
            </table>
          </div>
        <% else %>
          <div class="menu_list_before_login">
            <table>
              <tr>
                <td><i class="fas fa-sign-in-alt"></i><%= link_to("Login",'/users/login_form',class:'header_link') %></td>
                <td><i class="far fa-user-circle"></i><%= link_to("Account",'/users/new',class:'header_link') %></td>
                <td><%= link_to("index",'/index',class:'header_link') %></td>
              </tr>
            </table>
          </div>
        <% end %>
    </header>
    <main>
    <br>
    <% if flash[:notice] %>
      <div class="flash"><%= flash[:notice] %></div>
    <%end%>
      <%= yield %>
    </main>
  </body>
</html>
